# AI
# LLM Provider Configuration
LLM_PROVIDER=openai  # Options: openai, qwen, etc.
MODEL_NAME=gpt-4o    # Model name to use
LLM_API_KEY=your_llm_api_key_here
LLM_API_BASE_URL=https://api.openai.com/v1

# Application Configuration
MAX_ITERATIONS=5     # Maximum number of iterations for the agent loop

# Crawler
# Platform (default: xhs)
PLATFORM=xhs

# Keywords to search (comma separated)
KEYWORDS=编程副业,编程兼职

# Login type: qrcode | phone | cookie (default: qrcode)
LOGIN_TYPE=qrcode

# Cookies (if LoginType is cookie)
COOKIES=

# Crawler type: search | detail | creator (default: search)
CRAWLER_TYPE=search

# Proxy settings
ENABLE_IP_PROXY=false
IP_PROXY_POOL_COUNT=0
IP_PROXY_PROVIDER_NAME=

# Browser settings
HEADLESS=false
SAVE_LOGIN_STATE=true
ENABLE_CDP_MODE=true
CDP_DEBUG_PORT=9222
CUSTOM_BROWSER_PATH=
CDP_HEADLESS=false
BROWSER_LAUNCH_TIMEOUT=30
AUTO_CLOSE_BROWSER=true
USER_DATA_DIR=

# Data saving
SAVE_DATA_OPTION=json

# Crawling settings
START_PAGE=1
CRAWLER_MAX_NOTES_COUNT=15
MAX_CONCURRENCY_NUM=1
ENABLE_GET_MEIDAS=false
ENABLE_GET_COMMENTS=true
CRAWLER_MAX_COMMENTS_COUNT_SINGLENOTES=10
ENABLE_GET_SUB_COMMENTS=false
CRAWLER_MAX_SLEEP_SEC=2

# XHS Specific
# Sort type: general | popularity_descending | time_descending (default: popularity_descending)
SORT_TYPE=popularity_descending

# Specific Note URLs to crawl (comma separated)
XHS_SPECIFIED_NOTE_URL_LIST=

# Creator IDs to crawl (comma separated)
XHS_CREATOR_ID_LIST=
